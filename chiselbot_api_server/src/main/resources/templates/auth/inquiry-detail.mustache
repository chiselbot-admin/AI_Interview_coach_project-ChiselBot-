{{> layout/header }}
<body id="page-top">
<div id="wrapper">
    {{> layout/sidebar }}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {{> layout/topbar }}

            <!-- 메인 콘텐츠 -->
            <div class="container mt-5">
                <h2 class="mb-4 text-center fw-bold">문의 상세 보기</h2>

                <div class="card shadow-sm p-4 mb-4">
                    <div class="mb-3">
                        <label class="fw-bold">제목</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">{{inquiry.title}}</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">작성자 이메일</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">{{inquiry.userName}}</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">상태</label>
                        <p>
                            {{#inquiry.isWaiting}}
                                <span class="badge bg-warning text-dark">{{inquiry.status.label}}</span>
                            {{/inquiry.isWaiting}}
                            {{#inquiry.isAnswered}}
                                <span class="badge bg-success">{{inquiry.status.label}}</span>
                            {{/inquiry.isAnswered}}
                            {{#inquiry.isClosed}}
                                <span class="badge bg-secondary">{{inquiry.status.label}}</span>
                            {{/inquiry.isClosed}}
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">문의 내용</label>
                        <div class="border rounded p-3 bg-light" style="min-height:150px;">
                            {{inquiry.content}}
                        </div>
                    </div>

                    {{#inquiry.answerContent}}
                        <div class="mb-3">
                            <label class="fw-bold">답변 내용</label>
                            <div class="border rounded p-3 bg-light text-secondary" style="min-height:150px;">
                                {{inquiry.answerContent}}
                            </div>
                        </div>
                    {{/inquiry.answerContent}}

                    {{^inquiry.answerContent}}
                        <div class="text-end mt-4">
                            <a href="/admin/inquiry/{{inquiry.inquiryId}}/answer-form" class="btn btn-success">
                                답변 작성
                            </a>
                            <a href="/admin/inquiries" class="btn btn-secondary ms-2">
                                목록으로
                            </a>
                        </div>
                    {{/inquiry.answerContent}}
                    {{#inquiry.answerContent}}
                        <div class="text-end">
                            <a href="/admin/inquiries" class="btn btn-secondary ms-2">
                                목록으로
                            </a>
                        </div>
                    {{/inquiry.answerContent}}
                </div>
            </div>
        </div>
        {{> layout/footer }}
    </div>
</div>

<style>
    body { background-color: #f8f9fa; }
    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    label {
        color: #495057;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
